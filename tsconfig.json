{
  "compilerOptions": {
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@interfaces/*": [
        "src/interfaces/*"
      ],
      "@middlewares/*": [
        "./src/middlewares/*"
      ],
      "@helpers/*": [
        "./src/helpers/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@api/*": [
        "./src/api/*"
      ]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}